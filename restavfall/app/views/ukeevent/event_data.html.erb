<script>
var save = function(title, id) {
    var elem = $("#"+id);
    var telem = $("#"+id+"_p");
    var newv = elem.val();
    if (newv === "")
        return;
    $.ajax({
        type: "POST",
        url: '/ukeeventdata/',
        data: {
            title: title,
            description: newv
        },
        success: function() {
            telem.text("Saved");
            setTimeout(function() {
                telem.text("");
            }, 2000);
        },
        error: function(obj, txt, err) {
            console.log("Txt: " + txt);
            console.log("Err: " + err);
            telem.text("Error");
            setTimeout(function() {
                telem.text("");
            }, 2000);
        }
    })
}
</script>

<form>
<% i = 0 %>
<% @events.each do |e| %>
    <%= e.title %><br>
    <textarea id="<%= i %>" rows="4" cols="50" onBlur="save('<%=e.title%>', <%=i%>)" ><%= e.description %></textarea>
       <div style="display:inline" id="<%= i %>_p"></div>
    <br>
    <br>
    <% i += 1 %>
<% end %>
</form>

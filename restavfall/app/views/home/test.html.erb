
<head>
    <%= stylesheet_link_tag 'test' %>
</head>

<div id="view">
    <div id="container" class="up">
        <h1 id="h1">Heading 1</h1>
        <h1 id="h2">Heading 2</h1>
        <div id="text" class="right">Tekst</div>
    </div>
</div>
<button onClick="
        var elem = $('#container');
        var cl = elem.attr('class');
        if (cl == 'up') elem.attr('class', 'down');
        else elem.attr('class', 'up');
        ">Toggle</button>
<button onClick="
        var elem = $('#text');
        var cl = elem.attr('class');
        ">Slide</button>
<script>
var lines = ['Tekst 1','Tekst 2', 'Tekst 3', 'Tekst 4'];
var c = 0;
var i = 0;
var update = function() {
    console.log("Running update");
    var elem = $('#text');
    var cl = elem.attr('class');
    if (cl == 'right') {
        elem.html(lines[i++ % lines.length]);
        elem.attr('class', 'center');
    }
    else if (cl == 'center') {
        if (c++ % 3 == 0)
            elem.attr('class', 'left');
        else
            return;
    }
    else elem.attr('class', 'right');
};
setInterval(update, 500);
</script>

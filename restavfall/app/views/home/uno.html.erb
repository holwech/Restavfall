<% content_for :head do %>
    <%= stylesheet_link_tag 'home', {:media => "(min-device-height: 900px)"} %>
	<%= stylesheet_link_tag 'home_small', {:media => "not all and (min-device-height: 900px)"} %>
    <%= javascript_include_tag 'home' %>

    <meta property="fb:app_id"             content="649498578495089" />
    <meta property="og:title"              content="Lychehjulet" />
	<meta property="og:description"        content="
					<%= @selfName %> snurret Lychehjulet, og det viste at <%= @friendName %> 
					er den utkårede til å være med på <%= @ev.title %>
" />
	<meta property="og:image"        		content="https://niivx.uka.no/<%= asset_path('UKElogo.png') %>" />
<% end %>

<% if @r %>
    <script type="text/javascript">
        window.top.location = 
            <%= (@redirecturl+"&app_data="+@rid).to_json.html_safe %>
    </script>
 <% else %>
    <script type="text/javascript">
		sr = '<%= @sr %>';
		console.log("<%= @ev.to_json %>");
    </script>
	<div id="view">
		<div id="container" class="down">
			<%= image_tag 'cloud_1.png', {:id => "cloud-1", :class => "cloud"} %>
			<%= image_tag 'cloud_2.png', {:id => "cloud-2", :class => "cloud"} %>
			<%= image_tag 'cloud_2.png', {:id => "cloud-3", :class => "cloud"} %>
			<div id="h1" class="header">LYCHEHJULET</div>
			<div id="text_wrap">
				<div id="text" class="right">Tekst</div>
			</div>
			<div id="wheel">
				<div id="wheel_pin"><%= image_tag 'wheel_pin.png' %></div>
				<div id="wheel_board"><%= image_tag 'wheel_board.png' %></div>
				<div id="wheel_foot"><%= image_tag 'wheel_foot.png' %></div>
			</div>
			<div id="button">
				<div id="button_arrow"><%= image_tag 'button_arrow.png' %></div>
				<div id="button_click" onClick="spin();" ><%= image_tag 'button_click.png' %></div>
				<div id="button_foot"><%= image_tag 'button_foot.png' %></div>
				<div id="button_text" class="nudge">SPINN!</div>
			</div>
			<div id="rhino">
				<div id="rhino_belly" class="breathe_start"><%= image_tag "nesehorn_belly.png" %></div>
				<div id="rhino_feet"><%= image_tag "nesehorn_feet.png" %></div>
				<div id="rhino_tail" class="wave"><%= image_tag "nesehorn_hale.png" %></div>
				<div id="rhino_head"><%= image_tag "nesehorn_hode.png" %></div>
				<div id="rhino_head" class="rhino-blink"><%= image_tag "nesehorn_blunk2.png" %></div>
			</div>
			<div id="uka">
				<%= image_tag "UKElogo_hvit.png" %>
			</div>
			<div id="event">
				<div id="event-image-wrapper">
					<img id="event-image" src="<%= 'https://www.uka.no'+@ev.image %>">
				</div>
				<div id="event-title"><%= @ev.title.upcase %></div>
				<div id="utsolgt" style="visibility: <%= @ev.sold_out == 1 ? "visible" : "hidden" %>">UTSOLGT</div>
			</div>
			<div id="profiles">
				<div id="friend">
					<img id="friend-image" src="<%= @friendImage %>"><br>
					<div id="friend-name-div">
					<a id="friend-name" target="_blank"><%= @friendName %></a>
					</div>
				</div>
				<div id="me">
					<img id="me-image" src="<%= @selfImage %>"><br>
					<div id="me-name-div">
					<a id="me-name" target="_blank"><%= @selfName %></a>
					</div>
				</div>
			</div>
			<div id="description-wrapper">
				<div id="description">
					<%= @selfName %> snurret Lychehjulet, og det viste at <%= @friendName %> 
					er den utkårede til å være med på <%= @ev.title %>
				</div>
				<div id="ticket">
					<a id="ticket-link" target="_blank"><%= @ev.sold_out == 1 ? "SE INFO" : "KJØP BILLETT" %></a>
				</div>
				<div id="ticket" class="hide">
					<a id="ticket-link" onClick="slideUp('<%= @token %>');">PRØV SELV</a>
				</div>
			</div>
			<div id="button-wrapper" style="display:none;">
            <div class="button3">
                <div class="inner-button" >
                    <%= image_tag "replay.png", {
                                  :id => "replay-img",  
                                  :class => "button-img", 
								  :title => "Prøv igjen",
								  :onClick => "again();"}  %> 
                </div>
            </div>
            <div class="button3">
                <div class="inner-button" >
					<%= image_tag "share.png", {:id => "share-image", :class => "button-img", :title => "Del på tidslinje"} %> 
                </div>
            </div>
            <div class="button3">
                <div class="inner-button" >
					<%= image_tag "message.png", {:id => "send-image", :class => "button-img", :title => "Del i chat"}%> 
                </div>
            </div>
			</div>
		</div>
	</div>
<% end %>


<% content_for :head do %>
    <%= stylesheet_link_tag 'home' %>
    <%= javascript_include_tag 'home' %>

    <meta property="fb:app_id"             content="649498578495089" />
    <meta property="og:title"              content="Restavfall" />
    <meta property="og:description"        content="<%= @selfName %> og <%= @friendName %> vil finne lykken under uka! V�r med p� <%= @etitle %> du også" />
<% end %>

<% if @r %>
    <script type="text/javascript">
        window.top.location = 
            <%= (@redirecturl+"&app_data="+@rid).to_json.html_safe %>
    </script>
 <% else %>
    <script type="text/javascript">
		sr = '<%= @sr %>';
    </script>
	<div id="view">
		<div id="container" class="down">
			<%= image_tag 'cloud_1.png', {:id => "cloud-1"} %>
			<%= image_tag 'cloud_2.png', {:id => "cloud-2"} %>
			<div id="h1" class="header">LYCHEHJULET</div>
			<div id="text_wrap">
				<div id="text" class="right">Tekst</div>
			</div>
			<div id="wheel">
				<div id="wheel_pin"><%= image_tag 'wheel_pin.png' %></div>
				<div id="wheel_board"><%= image_tag 'wheel_board.png' %></div>
				<div id="wheel_foot"><%= image_tag 'wheel_foot.png' %></div>
			</div>
			<div id="button">
				<div id="button_arrow"><%= image_tag 'button_arrow.png' %></div>
				<div id="button_click" onClick="spin();" class="blink"><%= image_tag 'button_click.png' %></div>
				<div id="button_foot"><%= image_tag 'button_foot.png' %></div>
				<div id="button_text">SPINN!</div>
			</div>
			<div id="rhino">
				<div id="rhino_belly" class="breathe_start"><%= image_tag "nesehorn_belly.png" %></div>
				<div id="rhino_feet"><%= image_tag "nesehorn_feet.png" %></div>
				<div id="rhino_tail" class="wave"><%= image_tag "nesehorn_hale.png" %></div>
				<div id="rhino_head"><%= image_tag "nesehorn_hode.png" %></div>
			</div>
			<div id="uka">
				<%= image_tag "UKElogo_hvit.png" %>
			</div>
			<div id="event">
				<div id="event-image-wrapper">
					<img id="event-image" src="<%= 'https://www.uka.no'+@ev.image %>">
				</div>
				<div id="event-title"><%= @ev.title %></div>
			</div>
			<div id="profiles">
				<div id="friend">
					<img id="friend-image" src="<%= @friendImage %>"><br>
					<a id="friend-name"><%= @friendName %></a>
				</div>
				<div id="me">
					<img id="me-image" src="<%= @selfImage %>"><br>
					<a id="me-name"><%= @selfName %></a>
				</div>
			</div>
			<div id="description-wrapper">
				<div id="description">
					<%= @ev.description %>
				</div>
				<div id="ticket">
					<a id="ticket-link">KJØP BILLETT</a>
				</div>
				<div id="ticket" class="hide">
					<a id="ticket-link" onClick="slideUp('<%= @token %>');">PRØV SELV</a>
				</div>
			</div>
			<div id="button-wrapper" style="display:none;">
				<div class="button3">
					<div class="inner-button">
						<%= image_tag "replay.png", {:class => "button-img", :onClick => "again();"}  %> 
					</div>
				</div>
				<div class="button3">
					<div class="inner-button">
						<%= image_tag "share.png", {:id => "share-image", :class => "button-img"} %> 
					</div>
				</div>
				<div class="button3">
					<div class="inner-button">
						<%= image_tag "message.png", {:id => "send-image", :class => "button-img"}%> 
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>

